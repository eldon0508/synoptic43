extends ../layout/base

block content
    div.content-header
        .container-fluid
            .row.mb-2
                .col-sm-6
                    h1 #{title}
                .col-sm-6
                    ol.breadcrumb.float-sm-right
                        li.breadcrumb-item
                            a(href='/transaction/index') Home
                        li.breadcrumb-item
                            a(href='/course/index') Course
                        li.breadcrumb-item.active Create

    section.content
        div.container-fluid
            div.row
                div.col-12
                    div.card
                        div.card-body
                            form(action="/course/store" method="post" enctype="multipart/form-data")
                                input(type="hidden" name="_csrf" value=_csrf)
                                div.row
                                    div.col-6
                                        div.form-group
                                            label(for="title") Title
                                            input.form-control#title(name='title' placeholder='Enter Title' required)
                                    div.col-6
                                        div.form-group
                                            label(for="status") Status
                                            select.form-control#status(name="status" required)
                                                option(value="") --- Select Status ---
                                                option(value=1) Active
                                                option(value=0) Inactive
                                div.row
                                    div.col-6
                                        div.form-group
                                            label(for="organiser") Organiser
                                            input.form-control#organiser(name='organiser' placeholder='Enter Organiser' required)
                                    div.col-6
                                        div.form-group
                                            label(for="url") URL
                                            input.form-control#url(type="url" name='url' placeholder='https://example.com' required)
                                div.row
                                    div.col-6
                                        div.form-group
                                            label(for='image') Image
                                            .input-group
                                                .custom-file
                                                    input#image.custom-file-input(type='file' name="image" required)
                                                    label.custom-file-label(for='image') Choose file
                                    div.col-6
                                        div.form-group
                                            label(for="description") Description
                                            textarea.form-control#description(name="description")
                                div.row
                                    div.col-12.text-right
                                        a(href="/course/index").mr-2
                                            button.btn.btn-secondary(type='button') Back
                                        button.btn.btn-success(type='submit') Submit